#include <stdio.h>

int main() {
    // Definição da constante do preço por quilo
    const float precoPorQuilo = 45.00;
    
    // Variável para armazenar o peso do prato
    float pesoPrato;
    
    // Solicita ao usuário que insira o peso do prato
    printf("Digite o peso do prato em quilos: ");
    scanf("%f", &pesoPrato);
    
    // Calcula o valor a pagar
    float valorAPagar = pesoPrato * precoPorQuilo;
    
    // Imprime o valor a pagar
    printf("O valor a pagar é: R$%.2f\n", valorAPagar);
    
    return 0;
}
